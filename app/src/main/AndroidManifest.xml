<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.chargynov.posts">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@drawable/ic_post"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_post"
        android:supportsRtl="true"
        android:theme="@style/Theme.Posts"
        android:usesCleartextTraffic="true">
        <activity android:name=".ui.comments.CommentsActivity"></activity>
        <activity android:name=".ui.posts.PostsActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>